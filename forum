    <script>
        function displayLatestData() {
            const form = document.getElementById('registrationForm');
            const display = document.getElementById('display-data');
            const formData = new FormData(form);
            const data = {};
            let allFieldsEmpty = true;

            for (const [key, value] of formData.entries()) {
                data[key] = value.trim();
                if (data[key] !== '') {
                    allFieldsEmpty = false;
                }
            }

            if (!allFieldsEmpty) {
                let displayHTML = '';
                // Only display fields that have a value
                if (data.fullName) displayHTML += '<strong>Full Name:</strong> ' + data.fullName + '<br>';
                if (data.email) displayHTML += '<strong>Email:</strong> ' + data.email + '<br>';
                if (data.phone) displayHTML += '<strong>Phone:</strong> ' + data.phone + '<br>';
                if (data.dob) displayHTML += '<strong>DOB:</strong> ' + data.dob + '<br>';
                if (data.gender) displayHTML += '<strong>Gender:</strong> ' + data.gender + '<br>';
                if (data.address) displayHTML += '<strong>Address (City):</strong> ' + data.address + '<br>';
                if (data.occupation) displayHTML += '<strong>Occupation:</strong> ' + data.occupation;

                display.innerHTML = displayHTML;
            } else {
                // Display 'Nothing submitted' if all fields are empty
                display.textContent = 'Nothing submitted.';
            }
        }
    </script>
